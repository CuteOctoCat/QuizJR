<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_colores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_dark">
    tools:context="una.quizjr.MainColores">
    <Button
        android:layout_width= "100dp"
        android:layout_height= "46dp"
        android:onClick= "pickColor"
        android:text= "Verde"
        android:id="@+id/btnVerde"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/Verde"
        android:layout_width= "50dp"
        android:layout_height= "50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Rojo"
        android:layout_alignStart="@+id/Rojo" />
    <Button
        android:layout_width= "100dp"
        android:layout_height= "46dp"
        android:onClick= "pickColor"
        android:text= "Rojo"
        android:id="@+id/btnRojo"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/Verde"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/Rojo"
        android:layout_width= "50dp"
        android:layout_height= "50dp"
        android:layout_above="@+id/btnAmarillo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width= "100dp"
        android:layout_height= "46dp"
        android:onClick= "pickColor"
        android:text= "Amarillo"
        android:id="@+id/btnAmarillo"
        android:layout_below="@+id/btnRojo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />
    <TextView
        android:id="@+id/Amarillo"
        android:layout_width= "50dp"
        android:layout_height= "50dp"
        android:layout_alignTop="@+id/btnAmarillo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" /> />
    <Button
        android:layout_width= "100dp"
        android:layout_height= "46dp"
        android:onClick= "pickColor"
        android:text= "Azul"
        android:id="@+id/btnAzul"
        android:layout_below="@+id/btnAmarillo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />
    <TextView
        android:id="@+id/Azul"
        android:layout_width= "50dp"
        android:layout_height= "50dp"
        android:layout_alignBottom="@+id/btnAzul"
        android:layout_alignLeft="@+id/Amarillo"
        android:layout_alignStart="@+id/Amarillo" />
</RelativeLayout>
